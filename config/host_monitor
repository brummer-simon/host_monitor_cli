# Example host_monitor config file

# Example ICMP connection
Host:     Google         # Host = Display name. Humanfriendly alias for HostName.
HostName: www.google.de  # HostName: FQDN or IP-Address
Protocol: icmp           # Protocol that is used to reach HostName. Allowed values: icmp, tcp
Interval: 5              # Duration between connection attempts in seconds.

# Example TCP connection
Host:     Heise          # @see above
HostName: www.heise.de   # @see above
HostPort: 22             # Portnumber, needed then 'Protocol: tcp'
Protocol: tcp            # @see above
Interval: 10             # @see above

